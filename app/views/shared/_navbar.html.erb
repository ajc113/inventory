              <% end %>
            </div>

            <div class="relative ml-3">
              <div class="group" data-action="click->nav-bar#toggleTransferLocationDropdown click->nav-bar#activeLink">
                <%= link_to "Transfers", "javascript:void(0)", id: "transfers-menu-button", "aria-expanded": "false", "aria-haspopup": "true",
                    class: "nav-link group-[.active-link]:bg-gray-900 text-gray-300 group-[.active-link]:text-white hover:bg-gray-700 hover:text-white rounded-md px-3 py-2 text-sm font-medium" %>
              </div>

              <% if @inventories.size > 0 %>
