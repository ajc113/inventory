<h1>Flavors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Instock</th>
      <th>Inventory Level</th> <!-- New column header -->
    </tr>
  </thead>
  <tbody>
    <% @flavors.each do |flavor| %>
      <tr>
        <td><%= flavor.name %></td>
        <td><%= flavor.instock %></td> <!-- New cell to display inventory level -->
        <td><%= flavor.inventory %></td> 
         <td><%#= link_to edit_flavor path %> </td> 
      </tr>
    <% end %>
            
  </tbody>
</table>





