            <tr>
              <td class="py-3.5 pl-4 pr-3 text-left text-sm sm:pl-6"><%= flavor_name %></td>
              <td class="py-3.5 pl-4 pr-3 text-left text-sm sm:pl-6"><%= data[:starting_inventory] %></td>
              <td class="py-3.5 pl-4 pr-3 text-left text-sm sm:pl-6"><%= data[:total_sale] %></td>
              <td class="py-3.5 pl-4 pr-3 text-left text-sm sm:pl-6"><%= data[:end_of_day_inventory] %></td>
              <td class="py-3.5 pl-4 pr-3 text-left text-sm sm:pl-6"><%= data[:revenue] %></td>
              <td class="py-3.5 pl-4 pr-3 text-left text-sm sm:pl-6"><%= data[:profit] %></td>
            </tr>
            <% total_profit = total_profit + data[:profit].to_i %>
            <% total_revenue = total_revenue + data[:revenue].to_i %>
            <% grand_total_sales = grand_total_sales + data[:total_sale].to_i %>
            <% total_starting_inventory = total_starting_inventory + data[:starting_inventory].to_i %>
            <% total_end_of_day_inventory = total_end_of_day_inventory + data[:end_of_day_inventory].to_i %>
          <% end %>
        </tbody>
        <tfoot>
          <tr class="font-bold">
            <td class="py-3.5 pl-4 pr-3 text-left text-sm sm:pl-6">Total</td>
            <td class="py-3.5 pl-4 pr-3 text-left text-sm sm:pl-6"><%= total_starting_inventory %></td>
            <td class="py-3.5 pl-4 pr-3 text-left text-sm sm:pl-6"><%= grand_total_sales %></td>
            <td class="py-3.5 pl-4 pr-3 text-left text-sm sm:pl-6"><%= total_end_of_day_inventory %></td>
            <td class="py-3.5 pl-4 pr-3 text-left text-sm sm:pl-6">$<%= total_revenue %></td>
            <td class="py-3.5 pl-4 pr-3 text-left text-sm sm:pl-6">$<%= total_profit %></td>
          </tr>
        </tfoot>
      </table>
    <% end %>
  </div>

  <% Inventory.all.each do |inventory| %>
    <div class="border p-4 my-2">
      <h2 class="text-xl font-bold mb-4"><%= inventory.name %></h2>
    </div>
  <% end %>
</div>
