<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <div class="container mx-auto px-4 py-8">
      <h1 class="text-2xl font-bold mb-4">User Details</h1>
      <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <p><strong>Email:</strong><span class="ml-80"><%= @user.email %></span></p>
      </div>

      <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex">
        <p>
          <strong>Roles:</strong>
          <span class="ml-80">
            <% @user.roles.each_with_index do |role, index| %>
              <p style="color: gray;"><%= role.name %> <%= @user.roles.size > index + 1 ? "|" : "" %>&nbsp;</p>
            <% end %>
          </span>
        </p>
      </div>
    </div>

    <div class="inline flex justify-between">
      <%= button_to "Destroy this user", user_path(@user), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "ml-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-5 rounded" %>
      <%= link_to 'Back to users', users_path, class: "ml-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-5 rounded" %>
    </div>
  </div>
</div>